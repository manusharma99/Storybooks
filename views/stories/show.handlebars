<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{story.title}}</h5>
                <h4>{{formatDate story.date "MMMM do YYYY"}}</h5>
                    <p class="card-text">{{{story.body}}}</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Written by -</h4>
                <p class="card-text">
                    <h5>{{story.user.firstName}} {{story.user.lastName}}</h5>
                </p>
                <a href="/stories/user/{{story.user.id}}" class="btn btn-primary">more from {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
{{#if story.allowComments}}
<div class="card text-center">
    <div class="card-header">
        Comments
    </div>
    <div class="card-body">
        {{#if user}}
        <form method="post" action="/stories/comment/{{story.id}}">
            <div class="form-group">
                <input type="text" class="form-control" name="commentBody">
            </div>
            <button type="submit" value="submit" class="btn btn-primary">Submit</button>
        </form>
        {{else}}
        <p>please <a href="/auth/google">log in</a> to leave a comment</p>
        {{/if}}
    </div>
    {{#each story.comments}}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{commentUser.image}}" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">{{commentBody}}</h3>
                    <h5><small class="text-muted">Comment By - </small><a href="/stories/user/{{commentUser.id}}">
                            {{commentUser.firstName}} {{commentUser.lastName}}</a></h5>
                    <p class="card-text"><small class="text-muted">Posted on :
                            {{formatDate commentDate 'MMMM do YYYY'}}</small></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}