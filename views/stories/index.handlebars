<h1> Public Stories</h1>
<div class="row">
  {{#each stories}}
  <div class="col-4">
    <div class="card" style="width: 10rem;">
      <img src='{{user.image}}' class="card-img-top" alt="user image">
      <a href="/stories/user/{{user.id}}">{{user.firstName}}{{user.lastName}}</a>
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{truncate body 50}}</p>
        {{#if user}}
        {{{editIcon user.id ../user.id id}}}
        {{/if}}
      </div>
      <a href="/stories/show/{{id}}" class="btn btn-primary">Read more</a>
    </div>
  </div>
  {{else}}
  <p>no story found</p>
  {{/each}}
</div>